@using Schaad.TeamLunch.WebUi.Models
@model VotingModel

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Vote", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Bitte abstimmen</h4>
            <hr />

            for (int i = 0; i < Model.Votes.Count; i++)
            {
            <div class="form-group">
                <div class="col-md-2">
                    @Html.CheckBoxFor(v => v.Votes[i].IsVoted) @Model.Votes[i].RestaurantName
                    @Html.HiddenFor(v => v.Votes[i].RestaurantId)
                    @Html.HiddenFor(v => v.Votes[i].RestaurantName)
                </div>
            </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Vote" />
                </div>
            </div>
        }
    </div>
</div>